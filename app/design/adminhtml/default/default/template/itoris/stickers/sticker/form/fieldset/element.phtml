$_element = $this->getElement();
$_note    = $_element->getNote();
$_trId    = $_element->getHtmlContainerId();
$_class   = $_element->getFieldsetHtmlClass();
$notCloseRow = $_element->getNotCloseRow();
$rowspan = $_element->getRowspan();
$colspan = $_element->getColspan();
?>
<?php if (!$_element->getNoDisplay()): ?>
	<?php if (!$rowspan): ?>
	<tr>
	<?php endif; ?>
		<?php if ($colspan): ?>
			<td colspan="<?php echo $colspan ?>" style="padding-top: 10px;">
				<?php echo trim($_element->getLabelHtml()) ?>
				<?php echo trim($_element->getElementHtml()) ?>
				<?php if ($_note): ?>
					<p class="note<?php echo $_class ? " {$_class}-note" : ''?>" id="note_<?php echo $_element->getId()?>"><span><?php echo $_note ?></span></p>
				<?php endif ?>
			</td>
		<?php elseif ($rowspan): ?>
			<td rowspan="<?php echo $rowspan ?>" style="padding-left: 50px; width: 100%;">
				<?php echo trim($_element->getLabelHtml()) ?><br/>
				<?php echo trim($_element->getElementHtml()) ?><br/>
				<?php if ($_note): ?>
					<p class="note<?php echo $_class ? " {$_class}-note" : ''?>" id="note_<?php echo $_element->getId()?>"><span><?php echo $_note ?></span></p>
				<?php endif ?>
			</td>
		<?php else: ?>
			<?php if ($_element->getType()=='hidden'): ?>
			<td colspan="2" class="hidden"><?php echo trim($_element->getElementHtml()) ?></td>
			<?php else: ?>
			<td class="label<?php echo $_class ? " {$_class}-label" : ''?>"><?php echo trim($_element->getLabelHtml()) ?></td>
			<td class="<?php echo $_element->hasValueClass() ? $_element->getValueClass() : 'value' ?><?php echo $_class ? " {$_class}-value" : ''?>">
				<?php echo trim($_element->getElementHtml()) ?>
				<?php if ($_note): ?>
					<p style="<?php echo $_element->getNoteStyle()?>" class="note<?php echo $_class ? " {$_class}-note" : ''?>" id="note_<?php echo $_element->getId()?>"><span><?php echo $_note ?></span></p>
				<?php endif ?>
			</td>
			<?php endif; ?>
		<?php endif; ?>
	<?php if (!$notCloseRow): ?>
	</tr>
	<?php endif; ?>
<?php endif; ?>