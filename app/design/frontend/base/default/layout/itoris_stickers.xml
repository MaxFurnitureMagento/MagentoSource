<?xml version="1.0"?>
<layout version="0.1.0">
	<default>
		<reference name="head">
			<action method="addItem">
				<type>js_css</type>
				<path>itoris/stickers/css/sticker.css</path>
			</action>
			<action method="addJs">
				<name>itoris/stickers/js/sticker.js</name>
			</action>
		</reference>
		<reference name="after_body_start">
			<block type="itoris_stickers/sticker" name="itoris_sticker" template="itoris/stickers/sticker.phtml"/>
		</reference>
	</default>
</layout>