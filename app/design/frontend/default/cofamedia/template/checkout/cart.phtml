<?php 
    //if cart empty Continue Shopping url is Home Page, if cart have product Shopping url is recently added product 
    $recentAdded = array();
    $session= Mage::getSingleton('checkout/session');
    foreach($session->getQuote()->getAllItems() as $item) {
        $_prod = Mage::getModel('catalog/product')->load($item->getProductId());
        $producttype = $_prod->getTypeId();
        $producturl = $_prod->getUrlKey();
        if($producttype != 'cartproduct'):
            $recentAdded[] = array("value"=>$producturl);
        endif;
    }
    $recentKeys = array_keys($recentAdded);
    $lastInArray = end($recentKeys);
    $recentAdded = $recentAdded[$lastInArray]['value'];

    if(empty($recentAdded)):
        $producturl = "/";
    else:
        $producturl = "/".$recentAdded.".html";
    endif;
