<?php if ($this->isPossibleOnepageCheckout()):?>
    <button type="button" title="<?php echo $this->__('Proceed to Checkout') ?>" class="button btn-proceed-checkout btn-checkout<?php if ($this->isDisabled()):?> no-checkout<?php endif; ?>"<?php if ($this->isDisabled()):?> disabled="disabled"<?php endif; ?> onclick="cm_checkout_click()"><span><span><?php echo $this->__('Proceed to Checkout') ?></span></span></button>
<script type="text/javascript">
if(typeof cm_checkout_click != 'function') {
  function cm_checkout_click() {
    if($('region_id').value && $('country').value)
      window.location='<?php echo $this->getCheckoutUrl() ?>';
    else
      {
        if(!$('region_id').value) $('region_id').addClassName('validation-failed');
        if(!$('country').value) $('country').addClassName('validation-failed');
        alert('Please choose Country and State.');
      }
  }
}
</script>
